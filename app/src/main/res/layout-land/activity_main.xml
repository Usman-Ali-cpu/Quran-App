<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/get_code"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="4dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_margin="2dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Enter Ayyat No:"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.067"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/surrahNo" />

        <EditText
            android:id="@+id/ayyatno"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:inputType="numberSigned"
            tools:ignore="SpeakableTextPresentCheck" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Enter Surrah No:" />

        <EditText
            android:id="@+id/surrahNo"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:inputType="number"
            tools:ignore="SpeakableTextPresentCheck" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_gravity="center"
            android:gravity="center">
            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Search"
                app:layout_constraintTop_toBottomOf="@+id/ayyatno"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Get Code"
                android:layout_margin="4dp"/>
        </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="2dp">
        <TextView
            android:id="@+id/displaytext"
            android:layout_width="306dp"
            android:layout_height="214dp"
            android:background="#D375E1"
            android:padding="16dp"
            android:text="No Text"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <Button
                android:id="@+id/prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:hapticFeedbackEnabled="false"
                android:text="Prev"
                android:textColorHint="@color/white"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:gravity="center" />

            <Button
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:text="next"
                android:textColorHint="@color/white"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>